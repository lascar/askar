- element_id = element.id ? element.id.to_s : "0"
- element_id_string = "element_" + element_id
= form_for element, :url => '/elements/update/' + element_id, :remote => true, :method => 'POST' do |f|
  %p
    = f.label :name, :style => "display:block"
    = f.text_field :name, :style => "display:block"
  %p
    = f.label :short_description, :style => "display:block"
    = f.text_area :short_description, :style => "display:block"
    = f.submit
