- element_id = (element and element.id) ? element.id.to_s : "0"
- element_id_string = "element_" + element_id
- element_name = element ? element.name : "0"
- element_short_description = (!element or !element.short_description) ? 'no short description' : element.short_description
%div{:id => element_id_string}
  .element_field{:id => element_id_string + '_name', :class => 'element_name'}= element_name
  .element_field{:id => element_id_string + '_short_description', :class => 'element_short_description'}= element_short_description
  .element_field{:id => element_id_string + '_show', :class => 'element_show'}= link_to 'Show', "/elements/show/" + element_id, :remote => true, :method => 'POST', :data => {:id => element_id}
  .element_field{:id => element_id_string + '_edit', :class => 'element_edit'}= link_to 'Edit', "/elements/edit/" + element_id, :remote => true, :method => :post
  .element_field{:id => element_id_string + '_delete', :class => 'element_delete'}= link_to 'Destroy', "/elements/delete/" + element_id, :remote => true, :method => :delete, :data => { :confirm => 'Are you sure?', :id => element_id }
.end_element
